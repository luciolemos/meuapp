{# =============================================================
   Partial: header.twig
   Descrição: Cabeçalho reutilizável para todos os artigos da documentação.
   Uso: {% include 'frontend/documentacao/partials/header.twig' with { title, subtitle, description, author, date, export } %}
   ============================================================= #}

<header class="mb-4 text-center">
  <h1 class="display-4 fw-bold mb-3"
      {% if not export %}data-aos="zoom-in"{% endif %}>
      {{ title }}
  </h1>

  {% if subtitle %}
    <h2 class="text-success"
        {% if not export %}data-aos="zoom-in" data-aos-delay="120"{% endif %}>
        {{ subtitle }}
    </h2>
  {% endif %}

  {% if description %}
    <p class="lead"
       {% if not export %}data-aos="zoom-in" data-aos-delay="240"{% endif %}>
       {{ description }}
    </p>
  {% endif %}

  {% if author and date %}
    <p class="text-muted small"
       {% if not export %}data-aos="fade-up" data-aos-delay="360"{% endif %}>
        <i class="fas fa-user"></i> {{ author }} &nbsp; | &nbsp;
        <i class="fas fa-calendar-alt"></i> {{ date|date("d/m/Y") }}
    </p>
  {% endif %}
</header>
