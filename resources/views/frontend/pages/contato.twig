{% extends "layouts/base.twig" %}
{% import "partials/macros.twig" as ui %}

{% block title %}{{ app_name }} — Contato{% endblock %}

{% block extra_css %}
{{ parent() }}
<link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
<link rel="stylesheet" href="/css/style.css">

<style>
/* ===================== HERO SECTION ===================== */
.hero-section {
    background: linear-gradient(135deg, #0d6efd, #0b5ed7);
    color: #fff;
    position: relative;
    overflow: hidden;
    transition: background 0.5s ease;
}
.hero-overlay {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 30% 50%, rgba(255,255,255,0.1), transparent 70%),
                radial-gradient(circle at 70% 50%, rgba(0,0,0,0.2), transparent 70%);
    z-index: 0;
}
.hero-content {
    position: relative;
    z-index: 1;
}

/* ===================== SEÇÕES ===================== */
section {
    scroll-margin-top: 80px;
}

/* ===================== TECH CARD ===================== */
.tech-card {
  background-color: var(--bs-body-bg);
  color: var(--bs-body-color);
  border-color: var(--bs-border-color);
  transition: all 0.3s ease;
}

.tech-card:hover {
  transform: translateY(-5px);
  border-color: var(--bs-primary);
  box-shadow: 0 0.75rem 1.5rem rgba(13, 110, 253, 0.2);
}

/* ===================== TIMELINE ===================== */
.timeline {
    position: relative;
    padding-left: 2rem;
    border-left: 3px solid var(--bs-primary);
    margin: 3rem auto;
    max-width: 800px;
}
.timeline-item {
    margin-bottom: 2rem;
    position: relative;
}

</style>
{% endblock %}


{% block content %}
