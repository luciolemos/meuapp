{# =============================================================
   Arquivo: errors/error-base.twig
   Seção: Layout base para páginas de erro
   Descrição: Padrão visual unificado para 403, 404 e 500
   Autor: Lucio Lemos
   ============================================================= #}

{% extends "layouts/base.twig" %}

{% block extra_css %}
{{ parent() }}
<link rel="stylesheet" href="https://unpkg.com/aos@2.3.1/dist/aos.css">
<style>
.error-section {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  background: linear-gradient(135deg, #f8f9fa, #e9ecef);
  position: relative;
  overflow: hidden;
  transition: background 0.5s ease;
}

.error-section .content {
  max-width: 700px;
  position: relative;
  z-index: 1;
}

.error-icon {
  font-size: 3rem;
  animation: fadeIn 1.2s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Dark Mode */
[data-bs-theme="dark"] .error-section {
  background: linear-gradient(135deg, #0b1524, #0d1b2a);
}
[data-bs-theme="dark"] .error-section p {
  color: #b5b5b5;
}
</style>
{% endblock %}

{% block content %}
<section class="error-section">
  <div class="container content" data-aos="fade-up">
    <i class="fas {{ icon }} error-icon mb-3 text-{{ color }}"></i>
    <h3 class="display-3 fw-bold mb-2">{{ code }}</h3>
    <h4 class="mb-3">{{ title }}</h4>
    <p class="lead mb-4">{{ message|raw }}</p>

    <a href="/home" class="btn btn-outline-secondary btn-sm me-2">
      <i class="fas fa-home me-2"></i> Voltar à Home
    </a>
    <a href="javascript:history.back()" class="btn btn-primary btn-sm">
      <i class="fas fa-arrow-left me-2"></i> Página Anterior
    </a>
  </div>
</section>
{% endblock %}

{% block extra_js %}
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init({ duration: 1000, once: true });</script>
{% endblock %}
