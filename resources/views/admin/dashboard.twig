{% extends "layouts/admin.twig" %}

{% block admin_content %}
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h4 mb-0"><i class="fas fa-tachometer-alt me-2"></i>{{ title }}</h1>
    <a href="/admin/logout" class="btn btn-outline-danger btn-sm">
      <i class="fas fa-sign-out-alt me-1"></i> Sair
    </a>
  </div>

  <p>Bem-vindo, <strong>{{ user }}</strong>! Você está logado no painel administrativo.</p>

  <div class="row mt-4">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-users me-2"></i>Usuários</h5>
          <p class="card-text">Gerencie os usuários do sistema.</p>
          <a href="/admin/users" class="btn btn-sm btn-primary">Acessar</a>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="card-title"><i class="fas fa-cogs me-2"></i>Configurações</h5>
          <p class="card-text">Ajuste as configurações da aplicação.</p>
          <a href="/admin/settings" class="btn btn-sm btn-secondary">Abrir</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
