{# =============================================================
   Componente: components/button.twig
   Uso básico:
       {% include 'components/button.twig' with {
           href: '/documentacao/twig',
           text: 'Conheça o Twig',
           icon: 'fas fa-code',
           variant: 'primary'
       } %}

   Parâmetros aceitos:
     - href (opcional): URL do link. Quando ausente, o botão vira <button>.
     - text (obrigatório): rótulo exibido.
     - icon (opcional): classe Font Awesome/Bootstrap Icons.
     - variant (opcional): primary, outline, danger, etc.
     - size (opcional): sm, lg.
     - attrs (opcional): dicionário com atributos extras (ex.: {'target': '_blank'}).
   ============================================================= #}

{% set variant = variant|default('primary') %}
{% set sizeClass = size is defined ? 'btn-' ~ size : '' %}
{% set baseClass = 'btn btn-' ~ variant ~ ' ' ~ sizeClass ~ ' shadow-sm d-inline-flex align-items-center gap-2' %}

{% if href is defined %}
  <a href="{{ href }}" class="{{ baseClass }} {{ extra_class|default('') }}"
     {% if attrs is defined %}{% for key, value in attrs %} {{ key }}="{{ value }}"{% endfor %}{% endif %}>
    {% if icon is defined %}<i class="{{ icon }}"></i>{% endif %}
    <span>{{ text }}</span>
  </a>
{% else %}
  <button type="{{ type|default('button') }}" class="{{ baseClass }} {{ extra_class|default('') }}"
          {% if attrs is defined %}{% for key, value in attrs %} {{ key }}="{{ value }}"{% endfor %}{% endif %}>
    {% if icon is defined %}<i class="{{ icon }}"></i>{% endif %}
    <span>{{ text }}</span>
  </button>
{% endif %}
